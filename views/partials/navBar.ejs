<form action="" method="GET" class="search-home" name="navBar">

  <input type="text" name="buscadorTexto" placeholder="Buscar evento en Eventicket..." class="search-bar">

  <select name="buscadorCategoria" id="" class="search-bar-buscador">
    <option disabled selected>Categor√≠a</option>
    <% let categorias = ['Deportes', 'Recitales', 'Obras de teatro', 'Stand Up', 'Conferencias'] %>
    <% categorias.forEach(categoria => { %>
      <option> <%= categoria %> </option>
    <% }); %>
  </select>

  <select name="buscadorFecha" id="" class="search-bar-buscador">
    <option disabled selected>Fecha</option>
    <% let meses = ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre'] %>
    <% meses.forEach(mes => { %>
      <option><%= mes %></option>
    <% }); %>
  </select>

  <input type="submit" value="Buscar" class="search-btn">
  
</form>