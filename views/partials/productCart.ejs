<% include('../../utils/dateUtils') %> <% if(searchedProducts) {%> <%
<!-- Bought chequea el estado del producto en el carrito, si es 0 significa que se agregó al carrito, pero no se compró. En cambio, 1 significa que el producto fue comprado -->
searchedProducts.forEach(product => { %>
<% if(product.bought === 0) {%>
<div class="articulos-cart">
  <div class="carrito-img"><img src="<%= product.cart_product.image %>" /></div>
  <div class="info">
    <h3 class="carrito-titulo"><%= product.cart_product.name %></h3>
    <h3 class="carrito-fecha"><%= formateDate(product.cart_product.date) %></h3>
    <h3 class="carrito-lugar"><%= product.cart_product.location %></h3>
    <div class="cart-precio">
      <p style="margin: 0; padding: 5px"><%= product.cart_tickets.name %></p>
      <p style="margin: 0; padding: 5px">
        $<%= product.cart_tickets.price * product.quantity %>
      </p>
      <p style="margin: 0; padding: 5px"><%= product.quantity %></p>
    </div>
    <article class="carrito-btn">
      <form action="/products/cart/<%=product.id %>?_method=delete" method="POST" id="product-delete" class="productDelete">
        <button type="submit" class="btn-eliminar-product-cart">
          <input type="hidden" value="<%= product.id %>" name="id">
          <i class="fa-regular fa-trash-can"></i>
        </button>
    </form>
    </article>
  </div>
</div>
<% } %> <% }); %> <% } %>
